<h3> Update Song Info </h3>

<% if flash[:my_errors] %>
<ul>
    <% flash[:my_errors].each do |error| %>
        <li> <%= error %> </li>
    <% end %>
<ul>
<%end>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :released %>
    <%= f.text_field :released %>
    <br>
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
    <br>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>
    <%= f.submit %>
    <% end %>